% IC Input

SpatialChan = 3;

ICinput = genICinput_varySpatialChan(SpatialChan, tauR, tauD, dt);

g_postIC = 0.3
E_exc = 0
tauR = 0.4
tauD = 3

% f(x) = (exp(-x/tauD) - exp(-x/tauR)).*(x>0)

netcon=eye(N_pre,N_post)

iIC(X,t) = g_postIC .* ICinput(ceil((t+dt*0.01)/dt),:) * netcon .* (X - E_exc);

% monitor functions

monitor iIC

@isyn += iIC(X,t)